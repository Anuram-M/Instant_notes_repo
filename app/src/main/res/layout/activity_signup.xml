<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup_activity"
    android:background="@color/black_blue_hue">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/reference_layout2id"
        android:layout_centerInParent="true"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/reference_layout2id"
        android:text="New to Noted!\nCreate your account here.."
        android:textSize="24sp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="60dp"
        android:textColor="@color/notecolor"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_mail_id"
        android:padding="12dp"
        android:hint="email"
        android:textSize="20sp"
        android:textColor="@color/notecolor"
        android:textColorHint="@color/grey_with_blue_hue"
        android:layout_below="@id/reference_layout2id"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/background_outline"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_password_id"
        android:inputType="textPassword"
        android:padding="12dp"
        android:hint="password"
        android:textSize="20sp"
        android:textColor="@color/notecolor"
        android:textColorHint="@color/grey_with_blue_hue"
        android:layout_below="@id/signup_mail_id"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/background_outline"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_password_id"
        android:text="show password"
        android:textColor="@color/notecolor"
        android:id="@+id/show_password2id"
        android:layout_marginHorizontal="10dp"
        android:buttonTint="@color/notecolor"
        />

    <Button
        android:id="@+id/signup_create_btnid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_password2id"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/teal_700"
        android:text="create"
        android:textColor="@color/white" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:id="@+id/goback_signin_btnid"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/teal_700"
        android:text="Signin"
        android:textColor="@color/white"
        />

</RelativeLayout>